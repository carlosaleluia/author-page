---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Sobre - Carlos Aleluia">
	<style>
		.page-header {
			padding: 5rem 0 4rem;
			border-bottom: 1px solid var(--border-color);
		}

		.page-header h1 {
			font-size: 3rem;
			font-weight: 300;
			letter-spacing: -1px;
		}

		.bio-content {
			padding: 4rem 0;
			font-size: 1.1rem;
			line-height: 1.9;
		}

		.bio-content p {
			margin-bottom: 1.5rem;
		}

		.bio-content h2 {
			font-size: 1.8rem;
			font-weight: 400;
			margin: 3rem 0 1.5rem;
			letter-spacing: -0.5px;
		}

		.bio-content a {
			color: var(--text-primary);
			text-decoration: underline;
			text-underline-offset: 3px;
		}

		@media (max-width: 768px) {
			.page-header h1 {
				font-size: 2.2rem;
			}
		}
	</style>

	<div class="container">
		<header class="page-header">
			<h1>Sobre</h1>
		</header>

		<section class="bio-content">
			<p>
				Carlos Aleluia é escritor português. [Bio completa aqui]
			</p>

			<h2>Formação</h2>
			<p>
				[Informação sobre formação]
			</p>

			<h2>Contacto</h2>
			<p>
				Email: <a href="mailto:carlos@exemplo.com">carlos@exemplo.com</a>
			</p>
		</section>
	</div>
</BaseLayout>